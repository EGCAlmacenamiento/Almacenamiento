package services;

import java.util.ArrayList;
import java.util.List;

import org.junit.Test;
import org.junit.runner.RunWith;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.test.context.ContextConfiguration;
import org.springframework.test.context.junit4.SpringJUnit4ClassRunner;

import utils.AbstractTest;
import domain.ItemQuantityCart;
import domain.ShoppingCart;

@RunWith(SpringJUnit4ClassRunner.class)
@ContextConfiguration(locations= { "classpath:spring/datasource.xml", "classpath:spring/config/packages.xml"})
public class ShoppingCartBasicTest extends AbstractTest {
	
	// Service under Test -----------------
	@Autowired
	private ShoppingCartService cartService;
	
	// Helper functions -------------------
	private ShoppingCart generateTestCart() {
		
		List<String> comments = new ArrayList<>();
		comments.add("Comentario 1");
		comments.add("Comentario 2");
		
		ShoppingCart cart = new ShoppingCart();
		
		cart.setComments(comments);
		cart.setItemQuantityCart(new ArrayList<ItemQuantityCart>());
		
		return cart;
	}
	
	@Test
	public void testSave1() {
		authenticate("consumer1");
		cartService.save(generateTestCart());
		authenticate(null);
	}
	
	@Test(expected = IllegalArgumentException.class)
	public void testSave2() {
		authenticate("admin1");
		cartService.save(generateTestCart());
		authenticate(null);
	}
	
	@Test(expected = IllegalArgumentException.class)
	public void testSave3() {
		authenticate("clerk1");
		cartService.save(generateTestCart());
		authenticate(null);
	}
	
	@Test
	public void testGetCart1() {
		authenticate("consumer1");
		cartService.getShoppingCart();
		authenticate(null);
	}
	
	@Test(expected = IllegalArgumentException.class)
	public void testGetCart2() {
		authenticate("admin1");
		cartService.getShoppingCart();
		authenticate(null);
	}
	
	@Test(expected = IllegalArgumentException.class)
	public void testGetCart3() {
		authenticate("clerk1");
		cartService.getShoppingCart();
		authenticate(null);
	}
	
	@Test
	public void testAddComment1() {
		authenticate("consumer1");
		cartService.addCommentToCart("bendiciones");
		authenticate(null);
	}
	
	@Test(expected = IllegalArgumentException.class)
	public void testAddComment2() {
		authenticate("admin1");
		cartService.addCommentToCart("bendiciones");
		authenticate(null);
	}
	
	@Test
	public void testModifyComment1() {
		authenticate("consumer1");
		cartService.addCommentToCart("bendiciones");
		cartService.modifyComment("bendiciones", "salutaciones");
		authenticate(null);
	}
	
	@Test(expected = IllegalArgumentException.class)
	public void testModifyComment2() {
		authenticate("admin1");
		cartService.addCommentToCart("bendiciones");
		cartService.modifyComment("bendiciones", "salutaciones");
		authenticate(null);
	}
}
