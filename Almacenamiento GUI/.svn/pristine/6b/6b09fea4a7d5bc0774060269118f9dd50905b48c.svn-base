package repositories;

import java.util.Collection;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;

import com.lowagie.text.pdf.AcroFields.Item;

@Repository
public interface ItemRepository extends JpaRepository<Item, Integer>{
	@Query("select i from Item i where i.numSold=(select max(z.numSold) from Item z);")
	public Collection<Item> bestSellerItems();

	@Query("select i from Item i where i.numSold=(select min(z.numSold) from Item z);")
	public Collection<Item> worstSellerItems();
	
	
	
}
