package repositories;

import java.util.Collection;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;

import domain.Order;

@Repository
public interface OrderRepository extends JpaRepository<Order, Integer> {
	
	@Query("select (count(o) * 100 / (select count(z) from Order z where MONTH(z.placementMoment) = MONTH(CURRENT_TIMESTAMP) AND YEAR(z.placementMoment) = YEAR(CURRENT_TIMESTAMP))) from Order o where MONTH(o.cancellationMoment) = MONTH(CURRENT_TIMESTAMP) AND YEAR(o.cancellationMoment) = YEAR(CURRENT_TIMESTAMP)")
	public double cancelledOrdersCurrentMonthRatio();
	
	@Query("select o from Order o where o.consumer = ?1")
	public Collection<Order> getAllOrdersFromConsumer(int consumerId);	
}