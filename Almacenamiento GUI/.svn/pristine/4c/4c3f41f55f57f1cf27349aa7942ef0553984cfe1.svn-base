package repositories;

import java.util.Collection;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;

import domain.Item;
import domain.ItemStockInWarehouse;

public interface ItemStockInWarehouseRepository extends JpaRepository<ItemStockInWarehouse, Integer> {
	
	@Query("select a.item from ItemStockInWarehouse a where a.warehouse = ?1")
	public Collection<Item> getAllItemsInWarehouse(int warehouseId);
	
	@Query("select a from ItemStockInWarehouse a where a.item.id = ?1 and a.warehouse.id = ?2")
	public ItemStockInWarehouse getItemStockInWarehouse(int itemId, int warehouseId);
}
