package services;

import org.junit.Test;
import org.junit.runner.RunWith;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.test.context.ContextConfiguration;
import org.springframework.test.context.junit4.SpringJUnit4ClassRunner;
import org.springframework.util.Assert;

import domain.ItemStockInWarehouse;
import utils.AbstractTest;

@RunWith(SpringJUnit4ClassRunner.class)
@ContextConfiguration(locations= { "classpath:spring/datasource.xml", "classpath:spring/config/packages.xml"})

public class ItemStockInWarehouseBasicTest extends AbstractTest{
	
	// Service under Test -----------------
	@Autowired
	private ItemStockInWarehouseService itemStockInWarehouseService;
	
	// referenced service
	@Autowired
	private ItemService itemService;
	@Autowired
	private WarehouseService warehouseService;
	
	// Helper functions -------------------
	private ItemStockInWarehouse generateTestItemStockInWarehouse() {
		ItemStockInWarehouse ItemStockInWarehouse = new ItemStockInWarehouse();

		ItemStockInWarehouse.setItem(itemService.findAll().iterator().next());
		ItemStockInWarehouse.setQuantity(100);
		ItemStockInWarehouse.setWarehouse(warehouseService.findAll().iterator().next());

		return ItemStockInWarehouse;
	}

	@Test
	public void test_createItemStockInWarehouse(){
		ItemStockInWarehouse i;
		
		authenticate("admin1");
		i = itemStockInWarehouseService.save(generateTestItemStockInWarehouse());
		Assert.isTrue(i.getId() != 0);
		authenticate(null);
	}
}
