package repositories;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;

import domain.ShoppingCart;

@Repository
public interface ShoppingCartRepository extends JpaRepository<ShoppingCart, Integer> {
	
	@Query("select c from ShoppingCart c where c.id = (select z.shoppingCart from Consumer z where z.userAccount = (select u from UserAccount u where u.id = ?1))")
	public ShoppingCart getShoppingCartByClientId(int clientId);

}
