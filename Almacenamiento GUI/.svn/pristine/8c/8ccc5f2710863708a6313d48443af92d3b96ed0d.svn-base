package repositories;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;

import domain.ItemQuantityCart;

@Repository
public interface ItemQuantityCartRepository extends	JpaRepository<ItemQuantityCart, Integer> {
	
	@Query("select i from ItemQuantityCart i where i.item.id = ?1 and i.shoppingCart.id = ?2")
	public ItemQuantityCart getItemQuantityInCart(int itemId, int cartId);

}
