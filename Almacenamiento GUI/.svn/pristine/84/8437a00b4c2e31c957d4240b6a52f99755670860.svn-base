package services;

import org.junit.Test;
import org.junit.runner.RunWith;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.test.context.ContextConfiguration;
import org.springframework.test.context.junit4.SpringJUnit4ClassRunner;
import org.springframework.util.Assert;

import utils.AbstractTest;
import domain.Item;
import domain.ItemQuantityCart;

@RunWith(SpringJUnit4ClassRunner.class)
@ContextConfiguration(locations= { "classpath:spring/datasource.xml", "classpath:spring/config/packages.xml"})

public class ItemQuantityCartBasicTest extends AbstractTest{
	
	// Service under Test -----------------
	@Autowired
	private ItemQuantityCartService itemQuantityCart;
	
	// related services
	@Autowired
	private ItemService itemService;
	@Autowired
	private ShoppingCartService shoppingCartService;
	
	// Helper functions -------------------
	private ItemQuantityCart generateTestItemQuantityCart()
	{
		ItemQuantityCart ItemQuantityCart = new ItemQuantityCart();
	
		ItemQuantityCart.setItem(itemService.findAll().iterator().next());	
		ItemQuantityCart.setItemQuantity(12);
		ItemQuantityCart.setShoppingCart(shoppingCartService.getShoppingCart());

		return ItemQuantityCart;
	}

	@Test
	public void test_createItemQuantityCart(){
		ItemQuantityCart i;
		
		authenticate("consumer1");
		i = itemQuantityCart.save(generateTestItemQuantityCart());
		Assert.isTrue(i.getId() != 0);
		authenticate(null);
	}
	
	@Test
	public void test_updateItemQuantityCart() {
		authenticate("consumer1");
		Item i = itemService.searchByKeyword("reader").iterator().next();
		shoppingCartService.changeItemQuantity(i, 288);
		ItemQuantityCart iq = itemQuantityCart.getItemInCart(43,11);
		Assert.isTrue(iq.getItemQuantity() == 288);
		authenticate(null);
	}
}
